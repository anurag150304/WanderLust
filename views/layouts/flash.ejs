<% if (success && success.length) { %>
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show col-md-6 flash" role="alert"
        style="text-wrap: nowrap;">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (error && error.length) { %>
            <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show col-md-6 flash">
                <img src="/svg/alert.svg" alt="alert" width="20rem" class="alert_img">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>