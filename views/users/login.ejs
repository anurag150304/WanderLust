<% layout('/layouts/boilerplate.ejs') %>
    <div class="col-md-6 col-sm-3 login">
        <h2 style="text-align: center;">Login</h2>
        <form action="/listings/login" class="needs-validation" method="post" novalidate>
            <div class="input-container mb-3">
                <input type="text" class="form-control" placeholder="Username" name="username" required>
                <div class="invalid-feedback">Username required</div>
            </div>
            <div class="input-container mb-3">
                <input type="password" placeholder="Password" name="password" class="form-control" required>
                <div class="invalid-feedback">Password required</div>
            </div>
            <button type="submit" class="btn btn-danger offset-5">Login</button>
        </form>
    </div>